@model AdvancedC_Final.Models.Ticket

@{
    ViewData["Title"] = "Ticket Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ticket Details</h2>

<dl>
    <dt>Title:</dt>
    <dd>@Model.Title</dd>

    <dt>Priority:</dt>
    <dd>@Model.Priority</dd>

    <dt>Required Hours:</dt>
    <dd>@Model.RequiredHours</dd>

    <dt>Completed:</dt>
    <dd>@Model.IsCompleted</dd>

</dl>

<div>
    <h3>Developers in Project:</h3>
    <div>
        @foreach (DeveloperTicket developer in Model.Developers)
        {
            <p>@developer.User.UserName</p>
        }
    </div>
</div>

<div>
    <a asp-action="AddDevTicket" asp-controller="Manager" asp-route-id="@Model?.Id">Add a Developer</a> |
    <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model?.ProjectId">Back to Project</a>
</div>