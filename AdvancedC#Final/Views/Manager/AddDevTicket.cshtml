@using AdvancedC_Final.Areas.Identity.Data;
@model AdvancedC_Final.Models.DeveloperTicket

@{
    ViewData["Title"] = "Add Developer to Ticket";
}

<h4 class="mt-5">Add Developer to Ticket</h4>

<form asp-action="AddDevTicket">
    <div class="form-group">
        <input type="hidden" asp-for="TickedId" />
        <input type="hidden" asp-for="Ticket.ProjectId" />
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">Select a Developer</label>
        <select asp-for="UserId" class="form-control">
            @if (ViewBag.Developers != null)
            {
                foreach (DeveloperProject dp in ViewBag.Developers)
                {
                    <option value="@dp.DeveloperId">@dp.Developer.UserName</option>
                }
            }
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <input type="submit" value="Add Developer" class="btn btn-success" />
        <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.TickedId" class="btn btn-secondary ms-2">Back to Ticket</a>
    </div>
</form>
